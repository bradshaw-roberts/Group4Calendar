<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Spinner?>

<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.example.calendar.EventController">

    <HBox>

        <VBox alignment="TOP_LEFT">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <HBox spacing="20.0" xmlns:fx="http://javafx.com/fxml">
                <Label text="Event Title"/>
                <TextField/>
            </HBox>

            <Label text="Event Description/Notes"/>
            <TextArea/>

            <Label text="Event Type"/>
            <ChoiceBox fx:id="eventTypeChoiceBox"/>

        </VBox>

        <VBox alignment="TOP_RIGHT">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <Label text="Date"/>
            <DatePicker/>

            <Label text="Location"/>
            <TextField/>

            <Label text="Start Time"/>
            <HBox>
                <Spinner fx:id="startTimeHour"/>
                <Label text=":"/>
                <Spinner fx:id="startTimeMin"/>
                <ChoiceBox/>
            </HBox>

            <Label text="End Time"/>
            <HBox>
                <Spinner fx:id="endTimeHour"/>
                <Label text=":"/>
                <Spinner fx:id="endTimeMin"/>
                <ChoiceBox/>
            </HBox>

        </VBox>

    </HBox>

    <HBox alignment="BOTTOM_RIGHT">
        <Button text="Submit"/>
        <Button text="Cancel"/>
    </HBox>

</VBox>